{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*",
        "public/**/*",
        "openapi.yaml"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}  
